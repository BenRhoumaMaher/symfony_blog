{% extends 'layouts/admin.html.twig' %}

{% block content %}
<div class="comment-form-wrap pt-5">
    <h3 class="ps-5">Create a new admin</h3>
    <form action="{{ path('admin_admins_create') }}" class="ps-5 pe-5 bg-light" method="POST" enctype="multipart/form-data">
        {{ form_start(form) }}

        <div class="form-group mt-2">
            <label class="form-label">Add Name</label>
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group mt-2">
            <label class="form-label">Add Email</label>
            {{ form_widget(form.email, { 'attr': {'class': 'form-select form-control'} }) }}
        </div>

        <div class="form-group mt-2">
            <label class="form-label">Add Password</label>
            {{ form_widget(form.plainPassword, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group mt-2">
            <label class="form-label">Add Bio</label>
            {{ form_widget(form.bio, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group mt-2">
            <label class="form-label">Add Image</label>
            {{ form_widget(form.image, { 'attr': {'class': 'form-control'} }) }}
        </div>

        {# {% if is_granted('IS_AUTHENTICATED_FULLY') %} #}
        <div class="form-group mt-2 mb-2">
            <input type="submit" value="Create" class="btn btn-primary">
        </div>
        {# {% endif %}
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %} #}
        {# <div class="form-group">
            <input type="submit" value="Login First" class="btn btn-danger disabled">
        </div> #}
        {# {% endif %} #}
        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
