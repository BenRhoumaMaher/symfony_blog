{% extends 'layouts/app.html.twig' %}

{% block content %}

<div class="section search-result-wrap">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="heading">Category: {{ categoryName }}</div>
            </div>
        </div>
        <div class="row posts-entry">
            <div class="col-lg-8">
                {% for post in posts %}
                <div class="blog-entry d-flex blog-entry-search-item">
                    <a class="img-link me-4" href="{{ path('post_posts_single', {'post': post.id}) }}">
                        <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image" class="img-fluid">
                    </a>
                    <div>
                        <a href="{{ path('category_category_single', {'category': categoryName}) }}">{{ post.category.name }}</a></span>
                        <h2><a href="{{ path('post_posts_single', {'post': post.id}) }}">{{ post.title[:10] }}...</a></h2>
                        <p>{{ post.description[:20] }}...</p>
                        <p><a href="{{ path('post_posts_single', {'post': post.id}) }}" class="btn btn-sm btn-outline-primary">Read More</a></p>
                    </div>
                </div>
                {% else %}
                    <p>No posts yet in this category</p>
                {% endfor %}

            </div>

            <div class="col-lg-4 sidebar">


                <!-- END sidebar-box -->
                <div class="sidebar-box" style="padding: 20px">
                    <h3 class="heading">Popular Posts</h3>
                    <div class="post-entry-sidebar">
                        <ul>
                            {% for pop_post in popPosts %}
                            <li>
                                <a href="{{ path('post_posts_single', {'post': pop_post.id}) }}">
                                    <img src="{{ asset('uploads/images/' ~ pop_post.image) }}" alt="Image placeholder" class="me-4 rounded">
                                    <div class="text">
                                        <h4>{{ pop_post.title[:15] }}...</h4>
                                    </div>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <!-- END sidebar-box -->

                <div class="sidebar-box" style="padding: 20px">
                    <h3 class="heading">Categories</h3>
                    <ul class="categories">
                        {% for category in categories %}
                        <li><a href="{{ path('category_category_single', {'category': category.name}) }}">{{ category.getName() }}<span>{{ category.getPosts().count() }}</span></a></li>
                        {% endfor %}
                    </ul>
                </div>
                <!-- END sidebar-box -->




            </div>
        </div>
    </div>
</div>

{% endblock %}
