            </div>
            <div class="col-sm-6 text-sm-end"><a href="category.html" class="read-more">View All</a></div>
        </div>
        <div class="row g-3">
            <div class="col-md-9">
                <div class="row g-3">
                    {% for post in postBus %}
                    <div class="col-md-6">
                        <div class="blog-entry">
                            <a href="{{ path('post_posts_single', {'post': post.id}) }}" class="img-link">
                                <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image" class="img-fluid">
                            </a>
                            {# <span class="date">{{ post.created_at }}</span> #}
