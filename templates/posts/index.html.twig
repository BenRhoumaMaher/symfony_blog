{% extends 'layouts/app.html.twig' %}

{% block content %}
<section class="section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout">
            <div class="col-md-4">
                {% for post in posts %}
                <a href="{{ path('post_posts_single', {'post': post.id}) }}" class="h-entry mb-30 v-height gradient">
                    <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image" class="img-fluid">
                    <div class="text">
                        {# <span class="date">{{ post.created_at }}</span> #}
                        <h2>{{ post.title }}</h2>
                    </div>
                </a>
                {% else %}
                <p>No posts yet</p>
                {% endfor %}
            </div>
            <div class="col-md-4">
                {% for justpost in postOne %}
                <a href="{{ path('posts.single', {'id': justpost.id}) }}" class="h-entry img-5 h-100 gradient">
                    <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image" class="img-fluid">
                    <div class="text">
                        {# <span class="date">{{ justpost.created_at }}</span> #}
                        <h2>{{ justpost.title }}</h2>
                    </div>
                </a>
                {% endfor %}
            </div>
            <div class="col-md-4">
                {% for post in postTwo %}
                <a href="{{ path('post_posts_single', {'post': post.id}) }}" class="h-entry mb-30 v-height gradient">
                    <div class="featured-img" style="background-image: url('{{ asset('uploads/images/' ~ post.image) }}');"></div>
                    <div class="text">
                        {# <span class="date">{{ post.created_at }}</span> #}
                        <h2>{{ post.title }}</h2>
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<!-- End retroy layout blog posts -->

